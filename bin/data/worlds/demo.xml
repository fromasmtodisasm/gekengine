<?xml version="1.0"?>
<world name="Demo">
    <population>
        <entity>
            <transform position="0, 0, 0" rotation="0, 0, 0" />
            <model>sponza</model>
            <dynamic_body>sponza</dynamic_body>
            <mass>0</mass>
        </entity>

        <entity name="player">
            <transform position="0, 1, 0" rotation="0, 3.14159/2, 0" />
            <player_body outer_radius="3" inner_radius="1" height="6" stair_step="1.5" />
            <mass>250</mass>
        </entity>

        <entity name="player_head">
            <transform/>
            <follow distance="0, 5.5, 0" mode="offset">player</follow>
            <model>*sphere|debug//r10_m0|1</model>
            <scale>.8, .8, .8</scale>
        </entity>

        <entity name="player_target">
            <transform/>
            <follow distance="0, 0, 5" mode="offset">player_head</follow>
        </entity>

        <entity>
            <transform />
            <follow distance="1.5, .5, -10" speed="0.5">player_target</follow>
            <camera type="perspective" field_of_view="90" minimum_distance="0.5" maximum_distance="200" />
        </entity>

        <!--entity>
            <transform position="rand(55), lerp(10, 50, arand(1)), rand(30)" />
            <point_light radius="lerp(15, 30, arand(1))" />
            <color>1,0,0</color>
        </entity-->

        <entity>
            <transform position="0,1,5" />
            <point_light radius="15" />
            <color>1,0,0</color>
        </entity>
        <entity>
            <transform position="0,5,0" />
            <point_light radius="15" />
            <color>0,1,0</color>
        </entity>
        <entity>
            <transform position="0,1,-5" />
            <point_light radius="15" />
            <color>0,0,1</color>
        </entity>

        <entity>
            <transform position="0,1,0" />
            <model>*sphere|debug//r10_m0|1</model>
        </entity>

    </population>
</world>
