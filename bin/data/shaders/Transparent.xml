<?xml version="1.0"?>
<shader priority="2">
    <material>
        <maps>
            <albedo bind="float4" pattern="color" parameters="(1,1,1,1)">Texture2D</albedo>
        </maps>
    </material>

    <textures>
        <alphaBuffer bind="float4" flags="target">half4</alphaBuffer>
        <betaBuffer bind="float4" flags="target">half4</betaBuffer>
        <depthBuffer bind="float">float</depthBuffer>
        <finalBuffer bind="float" source="standard" name="finalBuffer" />
        <backgroundBuffer bind="float3" flags="target">half4</backgroundBuffer>
    </textures>

    <depth source="standard" />

    <block>
        <clear>
            <alphaBuffer>(0,0,0,0)</alphaBuffer>
            <betaBuffer>(1,1,1,0)</betaBuffer>
        </clear>

        <pass mode="forward" colors="2">
            <blendstates>
                <target>
                    <color source="one" destination="one" operation="add" />
                    <alpha source="one" destination="one" operation="add" />
                </target>
                <target>
                    <color source="zero" destination="inverse_source_color" operation="add" />
                    <alpha source="one" destination="one" operation="add" />
                </target>
            </blendstates>

            <renderstates>
                <cullmode>back</cullmode>
            </renderstates>

            <depthstates>
                <comparison>less</comparison>
                <writemask>zero</writemask>
            </depthstates>

            <targets>
                <alphaBuffer />
                <betaBuffer />
            </targets>

            <resources>
                <depthBuffer copy="depth" />
            </resources>

            <program>
                <entry>mainPixelProgram</entry>
                <source>Transparent\Calculate</source>
            </program>
        </pass>

        <pass mode="deferred">
            <resources>
                <alphaBuffer />
                <betaBuffer />
                <backgroundBuffer copy="finalBuffer" />
            </resources>

            <targets>
                <finalBuffer />
            </targets>

            <program>
                <entry>mainPixelProgram</entry>
                <source>Transparent\Combine</source>
            </program>
        </pass>
    </block>
</shader>
