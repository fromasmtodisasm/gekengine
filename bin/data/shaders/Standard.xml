<?xml version="1.0"?>
<shader>
    <material>
        <maps>
            <albedo bind="float4">Texture2D</albedo>
            <normal bind="float2">Texture2D</normal>
            <info bind="float4">Texture2D</info>
        </maps>
        <properties>
            <color>float4</color>
        </properties>
    </material>

    <defines>
        <lightTileSize>32</lightTileSize>
        <dispatchWidth>ceil(%displayWidth% / %lightTileSize%)</dispatchWidth>
		<dispatchHeight>ceil(%displayHeight% / %lightTileSize%)</dispatchHeight>
    </defines>

    <depth>D32</depth>

    <targets>
        <albedoBuffer bind="float4">RGBA_UINT8</albedoBuffer>
        <normalBuffer bind="half2">RG_HALF</normalBuffer>
        <depthBuffer bind="float">R_FLOAT</depthBuffer> 
        <infoBuffer bind="float4">RGBA_UINT8</infoBuffer>
    </targets>

    <buffers>
        <tileIndexList size="ceil(%displayWidth% / %lightTileSize%) * ceil(%displayWidth% / %lightTileSize%) * %lightListSize%">R_UINT8</tileIndexList>
    </buffers>

    <pass mode="forward">
        <depthstates>
            <comparison>lessequal</comparison>
            <writemask>all</writemask>
            <clear>1</clear>
        </depthstates>

        <renderstates>
            <cullmode>back</cullmode>
        </renderstates>

        <targets>
            <albedoBuffer />
            <normalBuffer />
            <depthBuffer />
            <infoBuffer />
        </targets>

        <program>
            <entry>mainPixelProgram</entry>
            <source>Standard\Deferred</source>
        </program>
    </pass>

    <pass mode="deferredlit">
        <resources>
            <depthBuffer />
        </resources>

        <unorderedaccess>
            <tileIndexList />
        </unorderedaccess>

        <program>
			<compute>
				<width>%dispatchWidth%</width>
				<height>%dispatchHeight%</height>
				<depth>1</depth>
			</compute>
            <entry>mainComputeProgram</entry>
            <source>Standard\Lighting</source>
        </program>
    </pass>

    <pass mode="deferredlit">
        <blendstates>
            <target>
                <color source="one" destination="one" operation="add" />
                <alpha source="one" destination="one" operation="add" />
            </target>
        </blendstates>

        <resources>
            <tileIndexList />
            <albedoBuffer />
            <normalBuffer />
            <depthBuffer />
            <infoBuffer />
        </resources>

        <program>
            <entry>mainPixelProgram</entry>
            <source>Standard\Lighting</source>
        </program>
    </pass>
</shader>
