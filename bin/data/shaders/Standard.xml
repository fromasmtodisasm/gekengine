<?xml version="1.0"?>
<shader priority="1">
    <lighting>
        <lightsPerPass>255</lightsPerPass>
    </lighting>

    <material>
        <solid>
            <albedo bind="float4" pattern="system" parameters="debug">Texture2D</albedo>
            <normal bind="float2" pattern="system" parameters="flat">Texture2D</normal>
            <roughness bind="float" pattern="color" parameters=".5">Texture2D</roughness>
            <metalness bind="float" pattern="color" parameters=".5">Texture2D</metalness>
        </solid>
        <transparent>
            <albedo bind="float4" pattern="system" parameters="debug">Texture2D</albedo>
            <normal bind="float2" pattern="system" parameters="flat">Texture2D</normal>
            <roughness bind="float" pattern="color" parameters=".5">Texture2D</roughness>
            <metalness bind="float" pattern="color" parameters=".5">Texture2D</metalness>
        </transparent>
    </material>

    <defines>
        <tileSize>32</tileSize>
        <dispatchWidth>ceil(displayWidth / tileSize)</dispatchWidth>
		<dispatchHeight>ceil(displayHeight / tileSize)</dispatchHeight>
        <shadowRadius>1.0</shadowRadius>
        <shadowStrength>0.3</shadowStrength>
        <shadowTapCount integer="true">12</shadowTapCount>
        <shadowSpiralCount>13</shadowSpiralCount>
        <bilateralEdgeSharpness>0.1</bilateralEdgeSharpness>
        <gaussianSigma>2</gaussianSigma>
        <guassianRadius integer="true">floor(displayHeight / 100)</guassianRadius>
    </defines>

    <depth>D32_FLOAT</depth>

    <textures>
        <albedoBuffer bind="float3" flags="target">R11G11B10_FLOAT</albedoBuffer>
        <materialBuffer bind="float2" flags="target">R8G8_UNORM</materialBuffer>
        <normalBuffer bind="half2" flags="target">R16G16_FLOAT</normalBuffer>
        <lightAccumulationBuffer bind="float3" flags="target">R11G11B10_FLOAT</lightAccumulationBuffer>
        <ambientOcclusionBuffer bind="float" flags="target" readwrite="true">R8_UNORM</ambientOcclusionBuffer>
        <finalBuffer bind="float3" flags="target">R11G11B10_FLOAT</finalBuffer>

        <startIndexBuffer bind="int" flags="unorderedAccess">R32_INT</startIndexBuffer>
    </textures>

    <buffers>
        <tileIndexList size="dispatchWidth * dispatchHeight * (lightsPerPass + 1)" flags="unorderedAccess">R8_UINT</tileIndexList>

        <pixelListBuffer stride="16" size="displayWidth * displayHeight * 5" flags="unorderedAccess, counter">PixelInfo</pixelListBuffer>
    </buffers>

    <block>
        <pass mode="forward" name="solid">
            <depthstates>
                <comparison>less_equal</comparison>
                <writemask>all</writemask>
                <clear>1</clear>
            </depthstates>

            <renderstates>
                <cullmode>back</cullmode>
            </renderstates>

            <targets>
                <albedoBuffer />
                <materialBuffer />
                <normalBuffer />
            </targets>

            <program>
                <entry>mainPixelProgram</entry>
                <source>Standard\StoreDeferred</source>
            </program>
        </pass>

        <pass mode="forward" name="transparent">
            <depthstates>
                <comparison>less</comparison>
                <writemask>zero</writemask>
            </depthstates>

            <renderstates>
                <cullmode>back</cullmode>
            </renderstates>

            <unorderedaccess>
                <startIndexBuffer />
                <pixelListBuffer />
            </unorderedaccess>

            <targets>
            </targets>

            <program>
                <entry>mainPixelProgram</entry>
                <source>Standard\StoreLinkedLists</source>
            </program>
        </pass>
    </block>

    <block lighting="true">
        <clear>
            <lightAccumulationBuffer>(0,0,0,0)</lightAccumulationBuffer>
        </clear>

        <pass mode="compute">
            <resources>
                <depth />
            </resources>

            <unorderedaccess>
                <tileIndexList />
            </unorderedaccess>

            <program>
                <compute>
                    <width>dispatchWidth</width>
                    <height>dispatchHeight</height>
                    <depth>1</depth>
                </compute>
                <entry>mainComputeProgram</entry>
                <source>Standard\TiledLightCulling</source>
            </program>
        </pass>

        <pass mode="deferred">
            <blendstates unified="true">
                <color source="one" destination="one" operation="add" />
            </blendstates>

            <resources>
                <tileIndexList />
                <albedoBuffer />
                <materialBuffer />
                <normalBuffer />
                <depth />
            </resources>

            <targets>
                <lightAccumulationBuffer />
            </targets>

            <program>
                <entry>mainPixelProgram</entry>
                <source>Standard\AccumulateLighting</source>
            </program>
        </pass>
    </block>

    <block>
        <pass mode="deferred">
            <resources>
                <normalBuffer />
                <depth />
            </resources>

            <targets>
                <ambientOcclusionBuffer />
            </targets>

            <program>
                <entry>mainPixelProgram</entry>
                <source>Standard\AmbientOcclusion</source>
            </program>
        </pass>

        <pass mode="deferred">
            <defines>
                <blurAxis>float2(1,0)</blurAxis>
            </defines>

            <resources>
                <ambientOcclusionBuffer actions="flip">sourceBuffer</ambientOcclusionBuffer>
                <depth />
            </resources>

            <targets>
                <ambientOcclusionBuffer />
            </targets>

            <program>
                <entry>mainPixelProgram</entry>
                <source>Standard\BilateralBlur</source>
            </program>
        </pass>

        <pass mode="deferred">
            <defines>
                <blurAxis>float2(0,1)</blurAxis>
            </defines>

            <resources>
                <ambientOcclusionBuffer actions="flip">sourceBuffer</ambientOcclusionBuffer>
                <depth />
            </resources>

            <targets>
                <ambientOcclusionBuffer />
            </targets>

            <program>
                <entry>mainPixelProgram</entry>
                <source>Standard\BilateralBlur</source>
            </program>
        </pass>

        <pass mode="deferred">
            <resources>
                <lightAccumulationBuffer />
                <ambientOcclusionBuffer actions="flip" />
            </resources>

            <targets>
                <finalBuffer />
            </targets>

            <program>
                <entry>mainPixelProgram</entry>
                <source>Standard\Combine</source>
            </program>
        </pass>
    </block>
</shader>
