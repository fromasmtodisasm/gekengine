<?xml version="1.0"?>
<shader>
    <material>
        <maps>
            <albedo bind="float4">Texture2D</albedo>
            <normal bind="float2">Texture2D</normal>
            <roughness bind="float">Texture2D</roughness>
            <metalness bind="float">Texture2D</metalness>
        </maps>
        <properties>
            <color>float4</color>
        </properties>
    </material>

    <defines>
        <lightTileSize>32</lightTileSize>
        <dispatchWidth>ceil(%displayWidth% / %lightTileSize%)</dispatchWidth>
		<dispatchHeight>ceil(%displayHeight% / %lightTileSize%)</dispatchHeight>
    </defines>

    <depth>D32</depth>

    <targets>
        <albedoBuffer bind="float3">float4</albedoBuffer>
        <materialBuffer bind="float2">float2</materialBuffer>
        <normalBuffer bind="float2">float2</normalBuffer>
        <depthBuffer bind="float">float</depthBuffer>
        <surfaceBuffer bind="float3">float4</surfaceBuffer>
    </targets>

    <buffers>
        <tileIndexList size="%dispatchWidth% * %dispatchHeight% * %lightListSize%">byte</tileIndexList>
    </buffers>

    <pass mode="forward">
        <depthstates>
            <comparison>lessequal</comparison>
            <writemask>all</writemask>
            <clear>1</clear>
        </depthstates>

        <renderstates>
            <cullmode>back</cullmode>
        </renderstates>

        <targets>
            <albedoBuffer />
            <materialBuffer />
            <normalBuffer />
            <depthBuffer />
        </targets>

        <program>
            <entry>mainPixelProgram</entry>
            <source>Standard\Deferred</source>
        </program>
    </pass>

    <pass mode="compute" lighting="true">
        <resources>
            <depthBuffer />
        </resources>

        <unorderedaccess>
            <tileIndexList />
        </unorderedaccess>

        <program>
			<compute>
				<width>%dispatchWidth%</width>
				<height>%dispatchHeight%</height>
				<depth>1</depth>
			</compute>
            <entry>mainComputeProgram</entry>
            <source>Standard\Tiled</source>
        </program>
    </pass>

    <pass mode="deferred" lighting="true">
        <targets>
            <surfaceBuffer />
        </targets>

        <resources>
            <tileIndexList />
            <albedoBuffer />
            <materialBuffer />
            <normalBuffer />
            <depthBuffer />
        </resources>

        <program>
            <entry>mainPixelProgram</entry>
            <source>Standard\Lighting</source>
        </program>
    </pass>

    <pass mode="deferred">
        <resources>
            <surfaceBuffer />
            <albedoBuffer />
            <materialBuffer />
            <normalBuffer />
            <depthBuffer />
        </resources>

        <program>
            <entry>mainPixelProgram</entry>
            <source>Standard\Final</source>
        </program>
    </pass>
</shader>
