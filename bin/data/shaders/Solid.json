        },
        {
            "program": "AmbientBlur",
            "entry": "mainPixelProgram",
            "engineData": "namespace Defines { static const float2 BlurAxis = float2(0,1); };",
            "resources": [
                "depthBuffer",
                { "gaussianBuffer": "inputBuffer" }
            ],
            "targets": [
                "ambientBuffer"
            ]
        },
        {
            "program": "AmbientLighting",
            "entry": "mainPixelProgram",
            "resources": [
                "ambientBuffer",
                "albedoBuffer"
            ],
            "blendState": {
                "enable": true,
                "colorSource": "One",
                "colorDestination": "One",
                "colorOperation": "Add"
            },
            "targets": [
                "finalBuffer"
            ]
        }
    ]
