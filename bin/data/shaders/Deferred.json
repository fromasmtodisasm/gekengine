            "UseHalfLambert": true,
            "UseDisneyAlpha": true
        },
    },
    "passes": [
        {
            "program": "StoreDeferred",
            "entry": "mainPixelProgram",
            "mode": "forward",
            "material": "solid",
            "depthBuffer": "depthBuffer",
            "depthStyle": {
                "camera": "perspective",
                "clear":  true
            },
            "targets": [
                "albedoBuffer",
                "materialBuffer",
                "normalBuffer"
            ]
        },
        {
            "program": "AccumulateLighting",
            "entry": "mainPixelProgram",
            "lighting": true,
            "resources": [
                "albedoBuffer",
                "materialBuffer",
                "normalBuffer",
                "depthBuffer"
            ],
            "targets": [
                "finalBuffer"
            ]
        }
    ]
