    "materials": {
        "solid": {
            "data": [
                {
                    "name": "albedo",
                    "bind": "float4",
                    "pattern": "system",
                    "parameters": "debug",
                    "type": "Texture2D"
                },
                {
                    "name": "normal",
                    "bind": "float2",
                    "pattern": "system",
                    "parameters": "flat",
                    "type": "Texture2D"
                },
                {
                    "name": "roughness",
                    "bind": "float",
                    "pattern": "color",
                    "parameters": 0.5,
                    "type": "Texture2D"
                },
                {
                    "name": "metallic",
                    "bind": "float",
                    "pattern": "color",
                    "parameters": 0,
                    "type": "Texture2D"
                }
            ]
        }
    },
    "textures": {
        "depthBuffer": {
            "format": "D32_FLOAT",
            "flags": "depth"
        },
        "albedoBuffer": {
            "format": "R11G11B10_FLOAT",
            "flags": "target"
        },
        "materialBuffer": {
            "format": "R8G8_UNORM",
            "flags": "target"
        },
        "normalBuffer": {
            "format": "R8G8_NORM",
            "flags": "target"
        },
        "finalBuffer": {
            "format": "R11G11B10_FLOAT",
            "flags": "target"
        }
    },
    "output": "finalBuffer",
    "options": {
        "BRDF": {
            "Debug": {
                "selection": "None",
                "options": [
                    "None",
                    "ShowAlbedo",
                    "ShowNormal",
                    "ShowRoughness",
                    "ShowMetallic",
                    "ShowAttenuation",
                    "ShowDiffuse",
                    "ShowDistribution",
                    "ShowFresnel",
                    "ShowGeometricShadow"
                ]
            },
            "NormalDistribution": {
                "selection": "TrowbridgeReitz",
                "options": [
                    "None",
                    "Beckmann",
                    "Gaussian",
                    "GGX",
                    "TrowbridgeReitz"
                ]
            },
            "Fresnel": {
                "selection": "SphericalGaussian",
                "options": [
                    "None",
                    "Schlick",
