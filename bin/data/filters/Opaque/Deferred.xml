<?xml version="1.0"?>
<!DOCTYPE filter [
    <!ENTITY DeferredShader PUBLIC "%root%/data/filters/Shared/Deferred.xml" "">
]>
<filter>
    <render cullmode="back" />
    <pixel mode="forward">
        <targets>
            <target name="Albedo" format="RGBA_UINT8"/>
            <target name="World" format="RGBA_FLOAT"/>
            <target name="Info" format="RGBA_UINT8"/>
            <depth source="Opaque/PrePass" comparison="lessequal" writemask="none" />
        </targets>
        &DeferredShader;
    </pixel>
</filter>
