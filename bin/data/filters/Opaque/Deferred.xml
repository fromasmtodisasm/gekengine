<?xml version="1.0"?>
<!DOCTYPE filter [
    <!ENTITY DeferredShader PUBLIC "%root%/data/filters/Shared/Deferred.xml" "">
]>
<filter>
    <render cullmode="back" />
    <targets format="RGBA_FLOAT">
        <target name="Albedo" clear="0,0,0,0"/>
        <target name="World" clear="0,0,0,0"/>
        <target name="Info" clear="0,0,0,0"/>
        <depth source="Opaque/PrePass" comparison="lessequal" writemask="none" />
    </targets>
    <pixel mode="forward">
        &DeferredShader;
    </pixel>
</filter>
