<?xml version="1.0"?>
<!DOCTYPE filter [
    <!ENTITY DeferredShader PUBLIC "%root%/data/filters/Shared/Deferred.xml" "">
]>
<filter mode="forward">
    <render cullmode="back" />
    
    <targets>
        <target name="Albedo" format="RGBA_UINT8" clear="1,0,0,1"/>
        <target name="World" format="RGBA_HALF" clear="0,0,0,0"/>
        <target name="Info" format="RGBA_UINT8" clear="0,0,0,0"/>
        <depth format="D24S8" comparison="lessequal" writemask="all" clear="1" />
    </targets>
    
    <pixel>
        &DeferredShader;
    </pixel>
</filter>
