<?xml version="1.0"?>
<filter flip="true">
    <defines>
        <define name="gs_nRadius" value="4" />
        <define name="gs_nGuassianDeviation" value="2" />
        <define name="gs_nScale" value="1" />
        <define name="gs_nEdgeSharpness" value="1" />
        <define name="gs_nEpsilon" value="0.0001" />
    </defines>

    <pixel>
        <resources>
            <resource stage="1" source="Opaque.Albedo" />
            <resource stage="2" source="Opaque.Depth" />
            <resource stage="3" source="output" />
        </resources>

        <program source="%data%\programs\Opaque\BlurSSAO.hlsl" entry="MainPixelProgram" />
    </pixel>
</filter>
