<?xml version="1.0"?>
<filter flip="true">
    <defines>
        <define name="gs_nStepSize" value=".5" />
        <define name="gs_nNumSteps" value="30" />
        <define name="gs_nNumStepsBack" value="15" />
    </defines>

    <pixel>
        <resources>
            <resource stage="1" source="Opaque.Albedo" />
            <resource stage="2" source="Opaque.Normal" />
            <resource stage="3" source="Opaque.Depth" />
            <resource stage="4" source="Opaque.Info" />
            <resource stage="5" source="output" />
        </resources>

        <program source="%data%\shaders\Opaque\SSR.hlsl" entry="MainPixelProgram" />
    </pixel>
</filter>
