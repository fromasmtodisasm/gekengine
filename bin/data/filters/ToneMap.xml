<?xml version="1.0"?>
<filter>
    <textures>
        <luminanceBuffer bind="float" flags="target" mipmaps="0">half</luminanceBuffer>
        <averageLuminanceBuffer bind="float" flags="target, unorderedAccess, readWrite" width="1" height="1">half</averageLuminanceBuffer>
        <finalBuffer bind="float3" source="standard" name="finalBuffer" />
    </textures>

    <pass mode="deferred">
        <resources>
            <finalBuffer />
        </resources>

        <targets>
            <luminanceBuffer />
        </targets>

        <program>
            <entry>mainPixelProgram</entry>
            <source>ToneMap\CalculateLuminance</source>
        </program>
    </pass>

    <pass mode="deferred">
        <resources>
            <luminanceBuffer actions="generateMipMaps" />
            <averageLuminanceBuffer />
        </resources>

        <targets>
            <averageLuminanceBuffer />
        </targets>

        <program>
            <entry>mainPixelProgram</entry>
            <source>ToneMap\AdaptLuminance</source>
        </program>
    </pass>

    <pass mode="deferred">
        <resources>
            <finalBuffer />
            <averageLuminanceBuffer actions="flip" />
        </resources>

        <program>
            <entry>mainPixelProgram</entry>
            <source>ToneMap\ToneMap</source>
        </program>
    </pass>
</filter>
