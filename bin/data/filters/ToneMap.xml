<?xml version="1.0"?>
<filter>
    <textures>
        <luminanceBuffer bind="float" flags="target" mipmaps="0">R16_FLOAT</luminanceBuffer>
        <finalBuffer bind="float3" source="$standard" name="finalBuffer" />
    </textures>

    <buffers>
        <averageLuminanceBuffer size="1" flags="unorderedAccess">R32_FLOAT</averageLuminanceBuffer>
    </buffers>

    <passes>
        <calculate mode="deferred">
            <resources>
                <finalBuffer />
            </resources>

            <targets>
                <luminanceBuffer />
            </targets>

            <program entry="mainPixelProgram">ToneMap\CalculateLuminance</program>
        </calculate>

        <adapt mode="compute" width="1" height="1" depth="1">
            <resources>
                <luminanceBuffer actions="generateMipMaps" />
            </resources>

            <unorderedaccess>
                <averageLuminanceBuffer />
            </unorderedaccess>

            <program entry="mainComputeProgram">ToneMap\AdaptLuminance</program>
        </adapt>

        <tonemap mode="deferred">
            <resources>
                <finalBuffer />
                <averageLuminanceBuffer />
            </resources>

            <program entry="mainPixelProgram">ToneMap\ToneMap</program>
        </tonemap>
    </passes>
</filter>
