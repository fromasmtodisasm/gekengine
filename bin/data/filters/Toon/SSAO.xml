<?xml version="1.0"?>
<filter>
    <defines>
        <define name="gs_nNumSamples" value="32" />
        <define name="gs_nNumSpirals" value="12" />
        <define name="gs_nRadius" value="1" />
        <define name="gs_nStrength" value=".4" />
        <define name="gs_nEpsilon" value=".1" />
    </defines>

    <blend writemask="a">
        <color source="one" destination="zero" operation="add" />
        <alpha source="one" destination="zero" operation="add" />
    </blend>
    
    <pixel>
        <resources>
            <resource stage="1" source="Toon.Albedo" />
            <resource stage="2" source="Toon.Normal" />
            <resource stage="3" source="Toon.Depth" />
        </resources>

        <program source="Toon\SSAO.hlsl" entry="MainPixelProgram" />
    </pixel>
</filter>
