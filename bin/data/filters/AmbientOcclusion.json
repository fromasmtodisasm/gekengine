{
    "textures": {
        "depthBuffer": {
            "external": "shader",
            "name": "solid"
        },
        "albedoBuffer": {
            "external": "shader",
            "name": "solid"
        },
        "normalBuffer": {
            "external": "shader",
            "name": "solid"
        },
        "ambientBuffer": {
            "format": "R8_UNORM",
            "flags": "target"
        },
        "gaussianBuffer": {
            "format": "R8_UNORM",
            "flags": "target"
        }
    },
    "passes": [
        {
            "program": "AmbientCalculation",
            "entry": "mainPixelProgram",
            "resources": [
                "normalBuffer",
                "depthBuffer"
            ],
            "targets": [
                "ambientBuffer"
            ]
        },
        {
            "program": "AmbientBlur",
            "entry": "mainPixelProgram",
            "engineData": "namespace Defines { static const float2 BlurAxis = float2(1,0); };",
            "resources": [
                "depthBuffer",
                { "ambientBuffer": "inputBuffer" }
            ],
            "targets": [
                "gaussianBuffer"
            ]
        },
        {
            "program": "AmbientBlur",
            "entry": "mainPixelProgram",
            "engineData": "namespace Defines { static const float2 BlurAxis = float2(0,1); };",
            "resources": [
                "depthBuffer",
                { "gaussianBuffer": "inputBuffer" }
            ],
            "targets": [
                "ambientBuffer"
            ]
        },
        {
            "program": "AmbientLighting",
            "entry": "mainPixelProgram",
            "copy": {
                "screenBuffer": "screen"
            },
            "resources": [
                "ambientBuffer",
                "albedoBuffer"
            ],
            "blendState": {
                "enable": true,
                "colorSource": "One",
                "colorDestination": "One",
                "colorOperation": "Add"
            },
            "targets": [
                "screen"
            ]
        }
    ]
}